@page "/convert"
@using System

<PageTitle>Konvertering</PageTitle>

<h1>Konvertering</h1>

<!-- Formulär för att konvertera meter till fot. -->
<p>Konvertera meter till fot.</p>

<div class="form-container">
    <form>
        <label for="meter">Ange antal meter:</label>
        <input type="number" id="meter" @bind="meter">
        <button type="button" @onclick="ConvertMeterToFeet">Konvertera</button>
    </form>

    <p>Resultat: @meter meter är @convertedFeet fot</p>
</div>


@code {
    // Variabler för meter och fot. 
    private double meter;
    private double convertedFeet;

    // Metod som konverterar meter till fot genom en beräkning där 1 meter = 3.28084 fot.
    private void ConvertMeterToFeet()
    {
        convertedFeet = Math.Round(meter * 3.28084, 2);
    }
}